@model SubjectViewModel
@{
    ViewData["Title"] = "Agregar Materia";
}

<div class="card container-form" style="width: 500px;">
	<div class="card-header">Agregar Materia</div>

	<div class="card" style="margin:10px;">
		<form class="formulario" asp-action="SaveSubject" asp-controller="Subject" method="post">
			<div class="mb-3">
				<label for="name" class="form-label">Nombre</label>
				<input style="width: 250px;" asp-for="name" class="form-control" type="text" />
				<span asp-validation-for="name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Descripcion:</label>
				<input style="width: 250px;" asp-for="description" class="form-control" type="text" />
				<span asp-validation-for="description" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label for="isActive" class="form-label">Estado:</label>
				<select style="width: 250px;" asp-for="isActive" class="form-control">
					<option value="-1">[SELECCIONE]</option>
					<option value="1">Activo</option>
					<option value="0">Inactivo</option>
				</select>
				<span asp-validation-for="isActive" class="text-danger"></span>
			</div>
			<div class="card-body">
				<a asp-action="Index" asp-controller="Subject" class="btn btn-warning">Volver</a>
				<button class="btn btn-success" type="submit">Guardar</button>
			</div>
		</form>
	</div>
</div>

